<div class="mainContainer">
  <h1 class="pageTitle blogIndex">ブログ一覧</h1>

  <div class="container">
    <div class="row">
      <% @blogs.each do |blog| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="post-preview">
            <div class="blog-container">
              <div class="blog-title"><%= blog.title %></div>
              <div class="blog-content"><%= blog.content %></div>
              <div class="blog-user">Created By <span><%= blog.user.name %></span></div>
              <div class="blog-links">
                <ul>
                  <li><%= link_to "詳細", blog_path(blog.id), class: 'btn btn-default' %></li>
                  <% unless current_user.nil? %>
                    <% if blog.user_id == current_user.id %>
                    <li><%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-info' %></li>
                    <li><%= link_to "削除", blog_path(blog.id), method: :delete,
                     data: { confirm: '削除していいですか？' }, class: 'btn btn-danger' %></li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="page-link toNewBlog">
  <%= link_to "新しくブログを作成する", new_blog_path, class: 'btn btn-warning' %>
  </div>

</div>
